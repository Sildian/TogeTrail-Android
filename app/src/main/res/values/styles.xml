<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>
        <item name="popupMenuStyle">@style/PopupMenuTheme</item>
        <item name="textAppearancePopupMenuHeader">@style/PopupMenuTextAppearanceHeader</item>
        <item name="textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceBody</item>
        <item name="textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceBody</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewTheme</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonTheme</item>
    </style>

    <!-- Login theme -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Alert dialogs theme -->
    <style name="AlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonPositiveStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonNegativeStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogButtonNegativeStyle</item>
        <item name="materialAlertDialogTitleIconStyle">@style/AlertDialogIconStyle</item>
    </style>
    <style name="AlertDialogCriticalStyle" parent="@style/AlertDialogTheme">
        <item name="materialAlertDialogTitleIconStyle">@style/AlertDialogIconCriticalStyle</item>
    </style>
    <style name="AlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="AlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AlertDialogButtonPositiveStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>
    <style name="AlertDialogButtonNegativeStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="AlertDialogIconStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/colorWhite</item>
    </style>
    <style name="AlertDialogIconCriticalStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/colorRed</item>
    </style>

    <!-- PopupMenus -->
    <style name="PopupMenuTheme" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/shape_corners_round_color_primary</item>
    </style>
    <style name="PopupMenuTextAppearanceHeader" parent="@style/TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="PopupMenuTextAppearanceBody" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="itemTextAppearance">@style/ToolbarItemTextAppearance</item>
    </style>

    <!-- Toolbar wrapped in Collapsing toolbar-->
    <style name="ToolbarWrappedStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="itemTextAppearance">@style/ToolbarItemTextAppearance</item>
    </style>

    <!-- Toolbar text appearance -->
    <style name="ToolbarTitleTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>
    <style name="ToolbarItemTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <!-- BottomNavigationViews -->
    <style name="BottomNavigationViewTheme" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="itemIconTint">@color/colorset_menu_text</item>
        <item name="itemTextColor">@color/colorset_menu_text</item>
        <item name="itemRippleColor">@color/colorSecondaryLight</item>
    </style>

    <!-- FloatingActionsButtons -->
    <style name="FloatingActionButtonTheme" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorSecondaryLight</item>
    </style>

    <!-- Map buttons -->
    <style name="MapButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorSecondaryLight</item>
        <item name="iconTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Main</item>
    </style>
    <style name="MapButtonLeftStyle" parent="@style/MapButtonStyle">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Left</item>
    </style>

    <!-- Classic buttons -->
    <style name="ClassicButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorSecondaryDark</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Main</item>
    </style>

    <!-- Alert buttons -->
    <style name="CriticalButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorRed</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Main</item>
    </style>

    <!-- Outline buttons -->
    <style name="OutlineButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="iconTint">@color/colorSecondaryDark</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <!-- Transparent buttons -->
    <style name="TransparentButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="iconTint">@color/colorBlack</item>
    </style>

    <!-- Icon buttons -->
    <style name="IconButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="rippleColor">@color/colorSecondaryLight</item>
        <item name="iconTint">@color/colorSecondary</item>
    </style>

    <!-- Toggle Icon buttons -->
    <style name="ToggleIconButtonStyle" parent="@style/IconButtonStyle">
        <item name="backgroundTint">@color/colorset_toggle_background</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="rippleColor">@color/colorWhite</item>
    </style>

    <!-- Text input fields -->
    <style name="TextInputFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="boxStrokeColor">@color/colorSecondaryDark</item>
        <item name="hintTextColor">@color/colorSecondaryDark</item>
    </style>

    <!-- Text input fields with dropDown menu-->
    <style name="TextInputFieldDropDownMenuStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="boxStrokeColor">@color/colorSecondaryDark</item>
        <item name="hintTextColor">@color/colorSecondaryDark</item>
    </style>

    <!-- DatePicker theme -->
    <style name="DatePickerTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

    <!-- Main Shape appearance -->
    <style name="ShapeAppearanceOverlay.Main">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeTopLeft">@dimen/components_corner_medium</item>
        <item name="cornerSizeBottomRight">@dimen/components_corner_medium</item>
    </style>

    <!-- Left Shape appearance -->
    <style name="ShapeAppearanceOverlay.Left">
        <item name="cornerFamily">cut</item>
        <item name="cornerSizeBottomRight">@dimen/components_corner_medium</item>
    </style>

</resources>
