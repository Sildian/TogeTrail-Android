        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.sildian.apps.togetrail.trail.ui.map.TrailActivity">

        <include
            layout="@layout/view_toolbar_simple"
            android:id="@+id/activity_trail_toolbar"/>

        <FrameLayout
            android:id="@+id/activity_trail_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/activity_trail_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>