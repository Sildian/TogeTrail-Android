<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".trail.list.TrailsListFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_trails_list_text_current_research"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/components_margin_medium"
                android:layout_marginBottom="@dimen/components_margin_small"
                android:layout_marginStart="@dimen/components_margin_medium"
                android:layout_marginEnd="@dimen/components_margin_medium"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/colorSecondaryDark"
                android:text="@string/label_trail_list_current_research"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_trails_list_recycler_view_current_research"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"/>

            <TextView
                android:id="@+id/fragment_trails_list_text_last_added_trails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/components_margin_medium"
                android:layout_marginBottom="@dimen/components_margin_small"
                android:layout_marginStart="@dimen/components_margin_medium"
                android:layout_marginEnd="@dimen/components_margin_medium"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/colorSecondaryDark"
                android:text="@string/label_trail_list_last_added"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_trails_list_recycler_view_last_added_trails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"/>

            <TextView
                android:id="@+id/fragment_trails_list_text_my_trails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/components_margin_medium"
                android:layout_marginBottom="@dimen/components_margin_small"
                android:layout_marginStart="@dimen/components_margin_medium"
                android:layout_marginEnd="@dimen/components_margin_medium"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/colorSecondaryDark"
                android:text="@string/label_trail_list_my_trails"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_trails_list_recycler_view_my_trails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"/>

            <TextView
                android:id="@+id/fragment_trails_list_text_nearby_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/components_margin_medium"
                android:layout_marginBottom="@dimen/components_margin_small"
                android:layout_marginStart="@dimen/components_margin_medium"
                android:layout_marginEnd="@dimen/components_margin_medium"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/colorSecondaryDark"
                android:text="@string/label_trail_list_nearby_home"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_trails_list_recycler_view_nearby_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="false"/>

        </LinearLayout>

    </ScrollView>

</layout>