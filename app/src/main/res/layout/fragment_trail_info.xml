<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".trail.info.TrailInfoFragment"
    android:background="@drawable/shape_top_corners_round_color_primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_trail_info_text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_margin="@dimen/components_margin_medium"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/colorSecondary"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/example_trail_name"/>

        <com.google.android.material.button.MaterialButton
            style="@style/IconButtonStyle"
            android:id="@+id/fragment_trail_info_button_see"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_medium"
            app:icon="@drawable/ic_see_white" />

        <com.google.android.material.button.MaterialButton
            style="@style/IconButtonStyle"
            android:id="@+id/fragment_trail_info_button_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_medium"
            app:icon="@drawable/ic_edit_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fragment_trail_info_text_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_medium"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_body"
            android:text="@string/label_trail_level_medium"
            android:drawableStart="@drawable/ic_level_medium"
            android:drawablePadding="@dimen/components_margin_small"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_medium"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_body"
            android:text="@string/label_trail_type_hiking"
            android:drawableStart="@drawable/ic_hiking_white"
            android:drawablePadding="@dimen/components_margin_small"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_medium"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_duration"
            android:drawableStart="@drawable/ic_watch_white"
            android:drawablePadding="@dimen/components_margin_small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/components_margin_small"
        android:orientation="horizontal"
        android:background="@drawable/shape_corners_round_color_white">

        <TextView
            android:id="@+id/fragment_trail_info_text_ascent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_ascent"
            android:drawableTop="@drawable/ic_ascent"
            android:drawablePadding="@dimen/components_margin_small"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_descent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_descent"
            android:drawableTop="@drawable/ic_descent"
            android:drawablePadding="@dimen/components_margin_small"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_distance"
            android:drawableTop="@drawable/ic_distance"
            android:drawablePadding="@dimen/components_margin_small"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_max_elevation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_max_elevation"
            android:drawableTop="@drawable/ic_max_elevation"
            android:drawablePadding="@dimen/components_margin_small"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_min_elevation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/components_margin_small"
            android:gravity="center"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_min_elevation"
            android:drawableTop="@drawable/ic_min_elevation"
            android:drawablePadding="@dimen/components_margin_small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/components_margin_small"
        android:orientation="vertical"
        android:background="@drawable/shape_corners_round_color_white">

        <TextView
            android:id="@+id/fragment_trail_info_text_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/components_margin_medium"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_location"
            android:drawableStart="@drawable/ic_location_trail"
            android:drawablePadding="@dimen/components_margin_small"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/components_margin_small"
        android:orientation="vertical"
        android:background="@drawable/shape_corners_round_color_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin_medium"
            android:layout_marginBottom="@dimen/components_margin_small"
            android:layout_marginStart="@dimen/components_margin_medium"
            android:layout_marginEnd="@dimen/components_margin_medium"
            android:textSize="@dimen/text_size_title"
            android:textColor="@color/colorSecondaryDark"
            android:text="@string/label_trail_description"/>

        <TextView
            android:id="@+id/fragment_trail_info_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/components_margin_small"
            android:layout_marginBottom="@dimen/components_margin_medium"
            android:layout_marginStart="@dimen/components_margin_medium"
            android:layout_marginEnd="@dimen/components_margin_medium"
            android:textSize="@dimen/text_size_body"
            android:text="@string/example_trail_description"/>

    </LinearLayout>

</LinearLayout>