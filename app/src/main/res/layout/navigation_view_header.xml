<?xml version="1.0" encoding="utf-8"?>
<!--TODO replace background by an image-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <!--TODO replace image by the logo-->
    <ImageView
        android:id="@+id/navigation_view_header_image"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small"
        android:layout_margin="@dimen/components_margin_large"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/example_image_content_description"
        app:srcCompat="@drawable/ic_trail_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/navigation_view_header_user_image"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:layout_margin="@dimen/components_margin_medium"
            android:contentDescription="@string/example_image_content_description"
            app:srcCompat="@drawable/ic_user_black"
            android:tint="@color/colorWhite"/>

        <TextView
            android:id="@+id/navigation_view_header_text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/components_margin_medium"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_title"
            android:textColor="@android:color/white"
            android:text="@string/example_hiker_name" />

    </LinearLayout>

</LinearLayout>