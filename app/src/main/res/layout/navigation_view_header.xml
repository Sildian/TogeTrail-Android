<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_size_large"
        android:contentDescription="@string/example_image_content_description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/img_menu" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_size_large"
        android:contentDescription="@string/example_image_content_description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shape_gradient_transparent_to_black" />

    <ImageView
        android:id="@+id/navigation_view_header_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/components_margin_medium"
        android:layout_gravity="top|center_horizontal"
        android:contentDescription="@string/example_image_content_description"
        app:srcCompat="@drawable/ic_togetrail_logo_with_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/navigation_view_header_user_image"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_small"
            android:layout_margin="@dimen/components_margin_medium"
            android:contentDescription="@string/example_image_content_description"
            app:srcCompat="@drawable/ic_person_white" />

        <TextView
            android:id="@+id/navigation_view_header_text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/components_margin_medium"
            android:layout_gravity="center"
            android:textSize="@dimen/text_size_title"
            android:textColor="@android:color/white"
            android:text="@string/example_hiker_name" />

    </LinearLayout>

</FrameLayout>